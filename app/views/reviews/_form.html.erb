<%= form_with model: @review do |form| %>
  <div>
    <%= form.label :reviewer_name %><br>
    <%= form.text_field :reviewer_name %>
    <% @review.errors.full_messages_for(:reviewer_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_area :email %>
    <% @review.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @review.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <% if flash[:errors] %>
      <div class="errors"><%= flash[:errors] %></div>
    <% end %>

    <%= form.submit %>
  </div>
<% end %>